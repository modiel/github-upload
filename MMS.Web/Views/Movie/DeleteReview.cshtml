@model Review

<partial name="_Breadcrumbs" model=@(new [] {
    ("/", "Home"), 
    ("/movie", "Movies"),
    ($"/movie/details/{Model.Id}",$"{Model.Id}"), 
    ("","DeleteReview") 
})>



<div>
    <!-- display the review using a <dl> as per Details.cshtml -->
    <div class="col card rounded shadow pt-3">

        <h3 class="mb-4">Delete Review</h3>

        <h5 class="mb-4">Are you sure you want to delete this Review?</h4>

        <dl class="row">       
            <dt class="col-5">Name</dt>
            <dd class="col-7">@Model.Name</dd>

            <dt class="col-5">Created On</dt>
            <dd class="col-7">@Model.CreatedOn</dd>
            
            <dt class="col-5">Comment</dt>
            <dd class="col-7">@Model.Comment</dd>
            
            <dt class="col-5">Rating</dt>
            <dd class="col-7">@Model.Rating</dd>

           
        </dl>
    </div>

    <div class="mt-4">
        <!-- create a form to submit post request to DeleteReviewConfirm action  
            movie Id should be a hidden input field Titled 'Id" in the form       
            add type submit input button                                   
            add cancel link which calls Index action -->
        <form asp-controller="Movie" asp-action="DeleteReviewConfirm" type="post">
            <input type="hidden" asp-for="Id"/>
            <input type="submit" value="Confirm" class="btn btn-danger"/>
            <a class="btn btn-link" asp-controller="Movie" asp-route-id=@Model.MovieId asp-action="Index">Cancel</a>
        </form>
    </div>
    
</div>

