@model Review

<partial name="_Breadcrumbs" model=@(new [] { 
    ("/", "Home"), 
    ("/movie", "Movies"), 
    ($"/movie/details/{Model.MovieId}",$"{Model.MovieId}"), 
    ("","AddReview"), 
})>



<h3 class="mt-4 mb-4">Add Review</h3>
<div class="card rounded shadow p-3">
    <form asp-action="CreateReview">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="MovieId" class="form-control"/>  

        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>    

        <div class="form-group">
            <label asp-for="Comment" class="control-label"></label>      
            <textarea rows="5" asp-for="Comment" class="form-control" placeholder="Add your thoughts here..." ></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Rating" class="control-label"></label>
            <input asp-for="Rating" class="form-control"/>
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>    

        <div class="form-group">
          <input type="submit" value="Create Review" class="btn btn-primary"/>
          <a class="btn btn-secondary" asp-action="Details" asp-route-id=@Model.MovieId>Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}